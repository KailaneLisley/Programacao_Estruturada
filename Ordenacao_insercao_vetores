#include <stdio.h>

void swap(double *a, double *b);

int main(){
    
    int QTD_ALUNOS;
    printf("Digite a capacidade total: ");
    scanf("%d", &QTD_ALUNOS);

    printf("\n");
    double nota[QTD_ALUNOS];

    for(int i=0; i<QTD_ALUNOS;i++){

        printf("Digite o %dº número: ", i + 1);
        scanf("%lf", &nota[i]);

        int j = i;
        while(j!=0 && nota[j]<nota[j-1]){
            swap(&nota[j], &nota[j-1]);
            j--;
        }
    }
    printf("\n");
    
    for(int i=0; i<QTD_ALUNOS;i++){
        printf("nota[%d] = %.1f \n", i + 1, nota[i]);
    }
    printf("\n");
}

void swap(double *a, double *b){
    double aux = *a;
    *a = *b;
    *b = aux;
}
